<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sherif.sketchpad.MainActivity">

    <com.example.sherif.sketchpad.DrawingPanel
        android:id="@+id/drawing_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1.0">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_red"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_green"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_green"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_blue"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_black"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerInside"
                android:background="@drawable/back"/>

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
